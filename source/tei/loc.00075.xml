    <text type="manuscript">
        <body>
            <pb facs="loc.00075.001.jpg" xml:id="leaf001r" type="recto"/>
            <lg type="poem">
                <head type="main" rend="underline">Certainties, Faith
                    <lb/>Counterbalances, <lb/>Alternation</head>
                <lg type="linegroup">
                    <l>The body <add place="supralinear" rend="insertion">sluggish,</add> old,</l>
                    <l>The <subst>
                            
                                <del rend="overstrike" seq="1">fires in em</del>
                                                        
                                <add place="infralinear" rend="unmarked" seq="2">embers left of earlier
                                    fires</add>
                                                    </subst>
</l>
                    <l>
                        The frozen winter clods
                        —<subst><del rend="overstrike" seq="1">but</del>
                                                                
                                    <add rend="unmarked" place="supralinear" seq="2">—to them
                                        the</add></subst>
                                                            spring
                        <lb/>shall come
                    </l>
                    <l>
<subst>
                                
                                    <del rend="overstrike" seq="1">And <unclear reason="illegible" cert="low" resp="#kmp">heads</unclear></del>
                                                                
                                    <add place="supralinear" rend="unmarked" seq="2">With grass</add>
                                                            </subst> and <del rend="overstrike">leaves</del> flowers and summer
                        <lb/>
<del rend="overstrike">branches green</del> fruits and corn
                        
                    </l>
                </lg>
                <lg type="linegroup">
                    <l>The sun <del rend="overstrike">is</del>
                        <add place="supralinear" rend="insertion">now sinking</add> low in the west
                            <del rend="overstrike">de</del>
</l>
                    <l>Shall rise again to morning and to noon</l>
                    <l>The light in the eye grows dim—the
                        <lb/>body <add place="supralinear" rend="unmarked">blood all</add> sluggish,
                            old
                    </l>
                    <l>Appearances</l>
                </lg>
            </lg>
            <pb facs="loc.00075.002.jpg" xml:id="leaf001v" type="verso"/>
        </body>
