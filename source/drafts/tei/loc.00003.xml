            <head type="main-authorial" rend="underline">
               <subst>
                  <rdg varSeq="1">
                     <del rend="overstrike"
                          rend="underline">After the Supper and Talk</del>
                  </rdg>
                  <rdg varSeq="2">
                     <add place="supralinear"
                          rend="unmarked"
                          rend="underline">So Loth to Depart!</add>
                  </rdg>
               </subst>
            </head>

            <head type="sub" rend="underline">
               <subst>
                  <rdg varSeq="1">
                     <del rend="overstrike">
                        <unclear reason="deletion,illegible"
                                 cert="medium" resp="#cf">The lead</unclear>
                     </del>
                  </rdg>
                  <rdg varSeq="2">
                     <del rend="overstrike">
                        <add place="supralinear" rend="insertion">
                           <unclear reason="deletion,illegible"
                                    cert="medium" resp="#cf">Introducing</unclear>
                        </add>
                     </del>
                  </rdg>
                  <rdg varSeq="3">
                     <del rend="overstrike">
                        <add place="infralinear" rend="insertion">First of some</add>
